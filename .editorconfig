root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.json,*.yaml,*.yml}]
indent_size = 2
indent_style = space

[*.toml]
indent_size = 2
indent_style = space

[{*.py,*.md}]
indent_size = 4
indent_style = space

[{Makefile,*.mk,*.sh}]
indent_size = 8
indent_style = tab
